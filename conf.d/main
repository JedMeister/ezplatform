#!/bin/sh -ex

DB_NAME=ezpublish
DB_USER=ezpublish
DB_PASS=$(mcookie)

ADMIN_PASS=turnkey
ADMIN_MAIL=admin@example.com
DOMAIN=www.example.com

SRC=/usr/local/src
WEBROOT=/var/www/ezpublish

# tweak apache-credit
CONF=/etc/apache2/mods-available/substitute.conf
sed -i "s|</body>|</footer>|g" $CONF

# unpack and set permissions
tar -xf $SRC/ezpublish5_*.tar.gz -C $(dirname $WEBROOT)

mv $(dirname $WEBROOT)/ezpublish5_* $WEBROOT
rm $SRC/ezpublish5_*.tar.gz

chown -R root:root $WEBROOT
cd $WEBROOT
chown -R www-data:www-data web

cd $WEBROOT/ezpublish/
chown -R www-data:www-data cache logs config sessions

cd $WEBROOT/ezpublish_legacy/
chown -R www-data:www-data design extension settings var

# php.ini tweaks
PHPINI=/etc/php5/apache2/php.ini
sed -i "s|^memory_limit.*|memory_limit = 256M|" $PHPINI
sed -i "s|^;date.timezone.*|date.timezone = \"America/Los_Angeles\"|" $PHPINI

# configure apache
a2dissite 000-default
a2ensite ezpublish
a2enmod rewrite

# start services
/etc/init.d/mysql start
/etc/init.d/apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# preseed installation
cat >$WEBROOT/ezpublish_legacy/kickstart.ini<<EOF
[email_settings]
Continue=true
Type=mta

[database_choice]
Continue=true
Type=mysqli

[database_init]
Continue=true
Server=localhost
Port=3306
Database=$DB_NAME
User=$DB_USER
Password=$DB_PASS

[language_options]
Continue=true
Primary=eng-GB

[site_types]
Continue=true
Site_package=ezdemo_site

[site_access]
Continue=true
Access=url

[site_details]
Continue=true
Title=TurnKey eZ Publish
URL=http://$DOMAIN
Access=site
AdminAccess=site_admin
Database=ezpublish
DatabaseAction=remove

[site_admin]
Continue=true
FirstName=Admin
LastName=User
Email=$ADMIN_MAIL
Password=$ADMIN_PASS

[security]
Continue=true

[registration]
Continue=true
Comments=
Send=false
EOF

# install local packages
mv $SRC/ezpublish/* $WEBROOT/ezpublish_legacy/var/

for i in $WEBROOT/ezpublish_legacy/var/*.ezpkg
    do tar xf $i -C $WEBROOT/ezpublish_legacy/var
done

rm $WEBROOT/ezpublish_legacy/var/*.ezpkg
chown -R www-data:www-data $WEBROOT/ezpublish_legacy/var

# curl based install
URL="http://127.0.0.1/index.php/ezsetup"
CURL="curl -c /tmp/cookie -b /tmp/cookie"
$CURL $URL --data "eZSetupWizardLanguage=eng-GB&eZSetup_current_step=Welcome&eZSetup_next_button=Next+%3E"

mv $WEBROOT/ezpublish_legacy/.htaccess_root $WEBROOT/ezpublish_legacy/.htaccess

# cleanup
rm $WEBROOT/ezpublish_legacy/kickstart.ini
rm -f /tmp/cookie

# secure sensitive files
chmod 640 $WEBROOT/ezpublish_legacy/settings/siteaccess/base/site.ini.append
chmod 640 $WEBROOT/ezpublish_legacy/settings/siteaccess/site/site.ini.append.php
chmod 640 $WEBROOT/ezpublish_legacy/settings/siteaccess/site_admin/site.ini.append.php

# clear cache
cd $WEBROOT/ezpublish_legacy
su www-data -s /bin/sh -c "php5 $WEBROOT/ezpublish_legacy/bin/php/ezcache.php --clear-all --purge --no-colors"

# stop services
/etc/init.d/mysql stop
/etc/init.d/apache2 stop

